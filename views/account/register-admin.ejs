<div  class="form-container">
    <div class="register-text">
        <h1>Register Admin</h1>
        
        <%- messages() %>

        <% if (errors) { %>
            <ul class="notice">
           <% errors.array().forEach(error => { %>
             <li><%= error.msg %></li>
          <%  }) %>
           </ul>
          <% } %>
    </div>
    <div class="form-info">
        <form action="/account/register" method="POST">
            <div class="admin-option">
                <label for="account_type">Account Type:</label>
                <select id="account_type" name="account_type" required>
                    <option>--- Select Account Type ---</option>
                    <option value="Admin">Admin</option>
                    <option value="Employee">Employee</option>
                </select>
            </div>

            <label for="account_firstname">First Name:</label>
            <input type="text" id="account_firstname" name="account_firstname" required>
            
            <label for="account_lastname">Last Name:</label>
            <input type="text" id="account_lastname" name="account_lastname" required>
            
            <label for="account_email">Email Address:</label>
            <input type="email" id="account_email" name="account_email" required>
            
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <small> Password must be at least 12 characters, include a capital letter, a number, and a special character.</small>
            <div class="password-requirements">
                <p>Password Requirements:</p>
                <ul>
                    <li>At least 12 characters</li>
                    <li>At least one uppercase letter</li>
                    <li>At least one lowercase letter</li>
                    <li>At least one number</li>
                    <li>At least one special character</li>
                </ul>
            </div>
            <div class="show_password">
                <button type="button" id="togglePassword">Show Password</button>
            </div>
            <!-- Submit Button -->
            <button type="submit">Register</button>
        </form>
        
    </div>  
</div>
<script>
    const togglePassword = document.querySelector("#togglePassword");
    togglePassword.addEventListener("click", function () {
        const account_passwordInput = document.getElementById("account_password");
        const type = account_passwordInput.getAttribute("type");
        
        if (type == "password") { // Corrected type comparison
            account_passwordInput.setAttribute("type", "text");
            togglePassword.innerHTML = "Hide Password"; // Update button text
        } else {
            account_passwordInput.setAttribute("type", "password"); // Ensure lowercase "password"
            togglePassword.innerHTML = "Show Password";
        }
    });
</script>